<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/box_light" >

    <ImageView
        android:id="@+id/add1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView1"
        android:src="@drawable/locationicon_blue" />
    
     <ImageView
        android:id="@+id/add2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/add1"
        android:src="@drawable/locationicon_green" />

     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/add2"
         android:layout_alignLeft="@+id/textView2"
         android:text="Medium Text"
         android:textAppearance="?android:attr/textAppearanceSmall" />

     <ImageView
         android:id="@+id/arrow"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_above="@+id/textView3"
         android:layout_alignParentRight="true"
         android:layout_marginRight="18dp"
         android:src="@drawable/arrow_right" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:text="Masjid Name"
         android:textAppearance="?android:attr/textAppearanceMedium" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/add1"
         android:layout_alignRight="@+id/textView1"
         android:text="Medium Text"
         android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
