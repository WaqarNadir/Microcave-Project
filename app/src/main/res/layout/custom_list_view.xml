<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/box_light" >

    <ImageView
        android:id="@+id/local_area_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/locationicon_blue"
        android:layout_below="@+id/masjid_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"/>

    <ImageView
        android:id="@+id/larger_area_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/locationicon_green"
        android:layout_below="@+id/local_area_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/larger_area_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignBottom="@+id/larger_area_icon"
        android:layout_alignLeft="@+id/local_area"
        android:layout_alignStart="@+id/local_area" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/arrow_right"
        android:layout_alignBottom="@+id/local_area"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/masjid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masjid Name"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/local_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignBottom="@+id/local_area_icon"
        android:layout_toRightOf="@+id/local_area_icon"
        android:layout_toEndOf="@+id/local_area_icon" />

</RelativeLayout>
